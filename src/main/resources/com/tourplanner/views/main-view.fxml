<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<SplitPane dividerPositions="0.3" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tourplanner.MainController" styleClass="mainContainer">

    <stylesheets>
        <URL value="@../css/main-view.css" />
    </stylesheets>

    <VBox styleClass="leftMainContainer" minWidth="300" >
        <fx:include fx:id="newTripButtonFile" source="new-trip-button.fxml"/>
        <fx:include fx:id="searchBoxFile" source="search-box.fxml"/>
        <fx:include fx:id="tripListFile" source="tour-list.fxml"/>
    </VBox>

    <SplitPane orientation="VERTICAL" styleClass="rightMainContainer" minWidth="400">
        <fx:include fx:id="mapFile" source="map.fxml" minHeight="400"/>
        <fx:include fx:id="tourInfoFile" source="tour-info.fxml" minHeight="200"/>
    </SplitPane>

</SplitPane>
