<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<SplitPane fx:id="mainContainer" dividerPositions="0.35390625" styleClass="mainContainer" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tourplanner.controller.MainController">

    <stylesheets>
        <URL value="@../css/main-view.css" />
    </stylesheets>

    <VBox fx:id="leftContainer" minWidth="350" prefWidth="400" styleClass="leftMainContainer">
        <fx:include fx:id="newTripButtonFile" source="new-trip-button.fxml" />
        <fx:include fx:id="searchBoxFile" source="search-box.fxml" />
        <fx:include fx:id="tripListFile" source="tour-list.fxml" />
    </VBox>

    <SplitPane fx:id="rightContainer" dividerPositions="0.5" minWidth="500" orientation="VERTICAL" prefWidth="600" styleClass="rightMainContainer">
        <fx:include fx:id="mapFile" minHeight="400" source="map.fxml" />
        <fx:include fx:id="tourInfoFile" minHeight="200" source="tour-info.fxml" />
    </SplitPane>

</SplitPane>
