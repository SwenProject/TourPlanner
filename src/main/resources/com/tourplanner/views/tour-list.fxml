<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.tourplanner.controller.TourListController"
            stylesheets="@../css/trip-list.css"
            maxWidth="Infinity"
            maxHeight="Infinity"
            VBox.vgrow="ALWAYS"
            styleClass="tourListContainer"
            alignment="CENTER"
>

    <Label text="Saved tours will appear here!" />

    <!--Temporary Buttons for switching between tours since listview is not implemented yet-->
    <Button text="Next Tour" onAction="#onNextTour" />
    <Button text="Previous Tour" onAction="#onPreviousTour" />
</VBox>
