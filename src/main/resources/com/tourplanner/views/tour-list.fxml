<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.tourplanner.controller.TourListController"
            stylesheets="@../css/tour-list.css"
            maxWidth="Infinity"
            maxHeight="Infinity"
            VBox.vgrow="ALWAYS"
            styleClass="tourListContainer"
            alignment="CENTER"
>

    <VBox fx:id="noToursContainer" VBox.vgrow="ALWAYS" alignment="CENTER">
        <Region styleClass="no-tours-icon" />
        <Label styleClass="no-tours-text" text="No tours" />
    </VBox>

    <!--ListView for displaying tours-->
    <ListView VBox.vgrow="ALWAYS" visible="false" managed="false" fx:id="tourList" />

</VBox>
