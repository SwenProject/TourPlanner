<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            maxWidth="Infinity"
            VBox.vgrow="ALWAYS"
            alignment="TOP_LEFT"
            styleClass="log-cell-container"
>

    <Label>This is a tour log cell!</Label>
    <HBox>
        <Label text="Date: "/>
        <Label fx:id="logDate"/>
    </HBox>
    <HBox>
        <Label text="Time: "/>
        <Label fx:id="logTime"/>
    </HBox>
    <HBox>
        <Label text="Comment: "/>
        <Label fx:id="logComment"/>
    </HBox>
    <HBox>
        <Label text="Difficulty: "/>
        <Label fx:id="logDifficulty"/>
    </HBox>
    <HBox>
        <Label text="Rating: "/>
        <HBox VBox.vgrow="ALWAYS" maxWidth="Infinity" alignment="CENTER" styleClass="rating-star-container">
            <HBox HBox.hgrow="ALWAYS" minWidth="200">
                <Region fx:id="ratingStar1" styleClass="rating-star"/>
                <Region HBox.hgrow="ALWAYS"/> <!--for spacing-->
                <Region fx:id="ratingStar2" styleClass="rating-star"/>
                <Region HBox.hgrow="ALWAYS"/> <!--for spacing-->
                <Region fx:id="ratingStar3" styleClass="rating-star"/>
                <Region HBox.hgrow="ALWAYS"/> <!--for spacing-->
                <Region fx:id="ratingStar4" styleClass="rating-star"/>
                <Region HBox.hgrow="ALWAYS"/> <!--for spacing-->
                <Region fx:id="ratingStar5" styleClass="rating-star"/>
            </HBox>
        </HBox>
    </HBox>
    <HBox>
        <Label text="Total time: "/>
        <Label fx:id="logTotalTime"/>
    </HBox>

    <Button fx:id="editButton">Edit</Button>
    <Button fx:id="deleteButton">Delete</Button>
</VBox>
